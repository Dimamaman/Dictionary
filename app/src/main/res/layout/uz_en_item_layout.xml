<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:padding="16dp"
        app:layout_constraintEnd_toStartOf="@id/im_favorite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/constraint"
        android:background="?android:selectableItemBackground"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_uzbek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="ajablanmoq"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="noun"
        android:visibility="gone"
        app:layout_goneMarginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/text_english"
        app:layout_constraintStart_toEndOf="@id/text_english"
        android:layout_marginStart="20sp"
        android:textSize="20sp"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/im_favorite"
        android:layout_width="22sp"
        android:layout_height="22sp"
        android:layout_marginEnd="16dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:src="@drawable/not_favorite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/constraint"
        app:layout_constraintBottom_toBottomOf="@id/constraint"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_goneMarginStart="16dp"
        app:layout_constraintStart_toStartOf="@id/constraint"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/constraint"
        tools:text="aback"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_transcript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="/əbæk/"
        android:visibility="gone"
        app:layout_goneMarginStart="16dp"
        android:layout_marginTop="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="@id/text_english"
        app:layout_constraintTop_toBottomOf="@id/text_english"
        android:textSize="20sp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/sound"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:visibility="gone"
        android:src="@drawable/sound"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/im_favorite"
        app:layout_constraintStart_toStartOf="@id/im_favorite"
        app:layout_constraintTop_toTopOf="@id/text_type" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/im_copy"
        android:layout_width="32sp"
        android:layout_height="32sp"
        android:layout_marginEnd="16dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:padding="5dp"
        android:src="@drawable/copy"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/sound"
        app:layout_constraintBottom_toBottomOf="@id/sound"
        app:layout_constraintEnd_toStartOf="@id/sound"/>


</androidx.constraintlayout.widget.ConstraintLayout>